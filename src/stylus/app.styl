body {
  background: #ddd;
  margin: 0; padding: 0;
  font-family: sans-serif;
}
body > section#wrapper {
  background: #fff;
  width: 900px;
  padding: 1em;
  margin: 0 auto;

  >header {
    position: relative;
    h1 {
      margin: 0px;
      text-align: center;
    }

    .login {
      display: none;
      position: absolute;
      top: 0em;
      right: 0em;
    }

    .session {
      display: none;
      position: absolute;
      top: 0em;
      right: 0em;
    }
  }
}

form#toot {
  display: none;
  position: relative;
  padding: 0.25em;
  textarea {
    width: 100%;
    font-family: sans-serif;
    left: 1em; right: 1em;
    display: block;
    border: 1px solid #ccc;
  }
  button {
    width: 100%;
    display: block;
    border: 1px solid #ccc;
    padding: 0.25em;
  }
}

section.h-feed {
  margin: 1em 0;
  section.h-entry {
    position: relative;
    margin: 0.5em 0;
    padding: 1em 0.5em 0.25em 58px;
    min-height: 48px;
    background: #fff;
    border-top: 1px solid #ddd;
    a.u-url {
      text-decoration: none;
    }
    img.u-photo {
      position: absolute;
      border-radius: 6px;
      top: 1em;
      left: 0.25em;
      width: 48px;
      height: 48px;
    }
    header {
      font-size: 0.75em;
      margin: 0 0 0.25em 0;
      padding: 0;
      a.u-url:before {
        content: "\2219";
      }
      .h-card {
        a.u-url:before {
          content: "";
        }
        .p-name { font-weight: bold; }
        .p-nickname { color: #999; }
      }
    }
    p.e-content {
      margin: 0.5em 0 0.5em 0;
    }
  }
}

body.logged-out > section#wrapper {
  >header {
    .login { display: block; }
    .session { display: none; }
  }
  form#toot { display: none; }
}

body.logged-in > section#wrapper {
  >header {
    .login { display: none; }
    .session { display: block; }
  }
  form#toot { display: block; }
}
