body {
  background: #ddd;
  margin: 0; padding: 0;
  font-family: sans-serif;
}
body > section#wrapper {
  >header {
    position: relative;
    h1 {
      margin: 0px;
      text-align: center;
    }

    .login {
      display: none;
      position: absolute;
      top: 0em;
      right: 0em;
    }

    .session {
      display: none;
      position: absolute;
      top: 0em;
      right: 0em;
    }
  }
}

form#toot {
  display: none;
  position: relative;
  padding: 0.25em;
  textarea {
    width: 100%;
    font-family: sans-serif;
    left: 1em; right: 1em;
    display: block;
    border: 1px solid #ccc;
  }
  button {
    width: 100%;
    display: block;
    border: 1px solid #ccc;
    padding: 0.25em;
  }
}

body.logged-out > section#wrapper {
  >header {
    .login { display: block; }
    .session { display: none; }
  }
  form#toot { display: none; }
}

body.logged-in > section#wrapper {
  >header {
    .login { display: none; }
    .session { display: block; }
  }
  form#toot { display: block; }
}
