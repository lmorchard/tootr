body {
  background: #ddd;
  margin: 0; padding: 0;
  font-family: sans-serif;
  #wrapper {
    width: 955px;
    margin: 0 auto;
    #main {
      margin-right: 275px;
      background: #fff;
    }
    #sidebar {
      width: 275px;
      float: right;
      background: #eee;
    }
  }
}

#wrapper > header {
  position: relative;
  padding: 0 0 0.5em 0;
  h1 {
    margin: 0px;
  }
  img {
    vertical-align: middle;
  }
}

#sidebar {
  #about {
    padding: 1em;
    h2 {
      margin: 0;
    }
    dl.h-card {
      display: none;
      font-size: 0.75em;
      margin: 0;
      dt {
        margin: 0 0 0.25em 0;
        font-weight: bold;
      }
      dd {
        margin: 0 0 0.5em 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
    dl.h-card.ready {
      display: block;
    }
  }
}

section#entries {
  section.h-entry {
    position: relative;
    margin: 0.5em 1em;
    padding: 1em 0.5em 0.25em 64px;
    min-height: 48px;
    background: #fff;
    border-top: 1px solid #ccc;
    a.u-url {
      text-decoration: none;
    }
    img.u-photo {
      position: absolute;
      border-radius: 6px;
      top: 1em;
      left: 0.25em;
      width: 48px;
      height: 48px;
    }
    header {
      font-size: 0.75em;
      margin: 0 0 0.25em 0;
      padding: 0;
      a.u-url:before {
        content: "\2219";
      }
      .h-card {
        a.u-url:before {
          content: "";
        }
        .p-name { font-weight: bold; }
        .p-nickname { color: #999; }
      }
    }
    p.e-content {
      margin: 0.5em 0 0.5em 0;
    }
  }
}
